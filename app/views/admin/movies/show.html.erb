<div class="row">
  <h3><%= "【作品名】#{@movie.title}" %></br>
      【ジャンル】
      <% @movie.genres.each do |genre| %>
        <%= genre.name %>
      <% end %>
  </h3>
</div>


<div class="row ml-2 mt-md-3">
 <h3><%= "#{@movie.title} に投稿されたレビュー ( #{@movie.reviews.count(:review_text)} )" %></h3>
</div>

<% @reviews.each do |review| %>
<div class="border border-dark rounded" style="margin:10px 10px 0 10px;">
 <!--routingでネストしている場合は、引数に親と子の指定が必要-->
  <li class="list-unstyled mt-1 ml-1"><%= link_to "#{review.member.name} のレビュー", admin_movie_review_path(@movie,review) %></br>
  <li class="list-unstyled text-muted small ml-1"><%= review.created_at.strftime('%Y/%m/%d %H:%M') %></br>
  <li class="list-unstyled ml-1">評価 <%= review.point %>点 / 5.0点</br>
  <li class="list-unstyled mt-1 mr-1 mb-1 ml-2"><%= review.review_text %></p>
</div>
<div class="text-right mr-2">
  <%= "コメント( #{review.comments.count(:comment_text)} )" %>
</div>
<% end %>
