<div class="row">
  <h2><%= "【作品名】#{@movie.title}" %></br>
      【ジャンル】
      <% @movie.genres.each do |genre| %>
        <%= genre.name %>
      <% end %>
  </h2>
</div>


<div class="row">
 <h3><%= "#{@movie.title} に投稿されたレビュー ( #{@movie.reviews.count(:review_text)} )" %></h3>
</div>

<% @reviews.each do |review| %>
<div class="border border-dark" style="margin:10px;">
    <!--routingでネストしている場合は、引数に親と子の指定が必要-->
    <p><%= link_to "#{review.member.name} のレビュー", admin_movie_review_path(@movie,review) %></br>
       <%= review.created_at.strftime('%Y/%m/%d %H:%M') %></br>
       評価 <%= review.point %>点 / 5.0点</br>
       <%= review.review_text %></p>
</div>
<div class="text-right">
  <%= "コメント( #{review.comments.count(:comment_text)} )" %>
</div>
<% end %>
