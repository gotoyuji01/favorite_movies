<h2>会員一覧</h2>
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>会員名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td>
              <%= member.id %>
            </td>
            <td>
              <%= link_to "#{member.name}", admin_member_path(member) %>
            </td>
            <td>
              <%= member.email %>
            </td>
            <td>
              <% if member.is_deleted == false %>
					      <li class="list-unstyled text-success">有効</li>
					    <% else %>
					      <li class="list-unstyled text-danger">退会</li>
					    <% end %>
					</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<%#<%= paginate @member %>
