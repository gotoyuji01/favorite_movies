<h2>コメント投稿</h2></br>

<!--エラーメッセージ-->
<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="border border-dark" style="margin:10px;">
  <p><%= "#{@review.member.name} のレビュー" %></br>
     <%= @review.created_at.strftime('%Y/%m/%d %H:%M') %></br>
     評価 <%= @review.point %>点 / 5.0点</br>
     <%= @review.review_text %></p>
</div>
  
  <%= form_with model: [@movie, @review, @comment] do |f| %> 

    <div class="row">
      <div class="col-3">
        <%= f.label :コメント %></div>
      <div class="col-9">
        <%= f.text_area :comment_text %>
        <!--ログインメンバーのidで保存する-->
        <%= f.hidden_field :member_id, value: current_member.id %>
        <!--レビューのidで保存する-->
        <%= f.hidden_field :review_id, value: @review.id %>
      </div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-9">
        <%= f.submit "投稿する",class: "btn btn-success" %></div>
    </div>

  <% end %>

