<h2>レビュー投稿</h2></br>


    <div class="row">
      <div class="col-3">作品名</div>
      <div class="col-9">
        <%= @movie.title %>  
      </div>
    </div>
  
    <div class="row">
      <div class="col-3">ジャンル</div>
      <div class="col-9">
        <% @movie.genres.each do |genre| %>
          <%= genre.name %>
        <% end %>
      </div>
    </div>
  
  <%= form_with model: [@movie, @review] do |f| %> 

    <div class="row">
      <div class="col-3">
        <%= f.label :評価 %></div>
      <div class="col-9">
        <!--step: '0.1'で小数点以下第一位まで入力可能-->
        <%= f.number_field :point, step: '0.1', class: "hoge", min: 1, max: 5 %> /5点</div>
        <!--ログインメンバーのidで保存する-->
        <%= f.hidden_field :member_id, value: current_member.id %>
        <!--作品のidで保存する-->
        <%= f.hidden_field :movie_id, value: @movie.id %>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label :レビュー %></div>
      <div class="col-9">
        <%= f.text_area :review_text %></div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-9">
        <%= f.submit "投稿する",class: "btn btn-success" %></div>
    </div>

  <% end %>
