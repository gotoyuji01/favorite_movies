<h2>新規会員登録</h2></br>

  <%= form_for(resource, as: resource_name, url: member_registration_path) do |f| %>
    <div class="row">
      <div class="col-3">
        <%= f.label :会員名 %></div>
      <div class="col-9">
        <%= f.text_field :name, autofocus: true %></div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label :メールアドレス %></div>
      <div class="col-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label :パスワード（6文字以上） %></div>
      <div class="col-9">
        <%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label :パスワード（確認用） %></div>
      <div class="col-9">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-9">
        <%= f.submit "新規会員登録",class: "btn btn-success" %></div>
    </div>

  <% end %>

  <h3>既に会員登録済みの方</h3>

  <%= link_to "こちら", new_member_session_path %>
  <span> からログインしてください。</span>
